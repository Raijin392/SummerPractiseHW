<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/beige"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fragment_camera"
        android:textSize="@dimen/fragment_text_size"
        android:layout_marginTop="@dimen/margin_top_for_textview_in_fragment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_camera" />

    <ImageView
        android:id="@+id/image_camera"
        android:layout_width="@dimen/fragment_image_size"
        android:layout_height="@dimen/fragment_image_size"
        android:src="@drawable/ic_camera"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_camera"
        android:backgroundTint="@color/brown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_secret"
        android:layout_marginTop="@dimen/margin_top_for_button_in_fragment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_camera"/>

</androidx.constraintlayout.widget.ConstraintLayout>